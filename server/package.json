{
  "name": "@mono/server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "coverage": "vitest run --coverage",
    "dev": "tsx watch src",
    "dev:mem": "DB_TYPE=pg-mem tsx watch src",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "migration:create": "node src/database/cli 'migration:create src/database/migrations/$0'",
    "migration:generate": "npm run typeorm -- migration:generate ./src/database/migrations/Migration -d ./dist/database/cli/dataSource.js",
    "migration:revert": "npm run typeorm migration:revert -- -d src/database/cli/dataSource.ts",
    "migration:run": "npm run typeorm -- migration:run -d ./dist/database/cli/dataSource.js",
    "migration:show": "npm run typeorm migration:show -- -d src/database/cli/dataSource.ts",
    "start": "tsx src/index.ts",
    "test": "npm run test:mem",
    "test:mem": "DB_TYPE=pg-mem vitest",
    "test:db": "vitest",
    "typecheck": "tsc --noEmit",
    "typeorm": "node ../node_modules/typeorm/cli.js",
    "db:seed": "npx tsx src/database/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node18": "^18.2.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/chance": "^1.1.6",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.18",
    "@types/lodash": "^4.14.201",
    "@types/node": "^20.8.2",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/coverage-v8": "^3.1.1",
    "better-sqlite3": "^11.9.1",
    "chance": "^1.1.12",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "istanbul-lib-coverage": "^3.2.2",
    "pg-mem": "^2.7.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "tsc-alias": "^1.8.14",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.2.2",
    "vite": "^6.3.5",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "@trpc/server": "^10.41.0",
    "chance": "^1.1.11",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.0",
    "http-status-codes": "^2.3.0",
    "lodash": "^4.17.21",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.2",
    "superjson": "^2.2.1",
    "trpc-panel": "^1.3.4",
    "ts-node": "^10.9.1",
    "typeorm": "^0.3.17",
    "typeorm-naming-strategies": "^4.1.0",
    "vue-tsc": "2.2.8",
    "zod": "^3.22.4",
    "zod-validation-error": "^2.1.0"
  },
  "tsup": {
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "external": [
      "@mikro-orm",
      "mysql",
      "pg-promise",
      "slonik",
      "sqlite3",
      "kysely"
    ],
    "noExternal": [
      "superjson"
    ]
  }
}
